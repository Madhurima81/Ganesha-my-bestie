{(sceneState.phase === SCENE_PHASES.SCENARIO_UNCERTAINTY ||
  sceneState.phase === SCENE_PHASES.SCENARIO_CLARITY ||
  sceneState.phase === SCENE_PHASES.SCENARIO_CHOOSING ||
